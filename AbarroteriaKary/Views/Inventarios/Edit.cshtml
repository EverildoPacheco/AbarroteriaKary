<form asp-action="Edit" asp-route-id="@Model.InventarioId" method="post" id="frmInvEdit" autocomplete="off">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

    <input type="hidden" asp-for="InventarioId" />

    <input type="hidden" asp-for="ProductoId" />
    <input type="hidden" asp-for="CodigoProducto" />
    <input type="hidden" asp-for="NombreProducto" />
    <input type="hidden" asp-for="LoteCodigo" />
    <input type="hidden" asp-for="FechaVencimiento" />
    <input type="hidden" asp-for="StockActual" />


    <div class="card ak-card translucent shadow-sm w-100">
        <div class="card-body ak-form">

            <div class="alert alert-info d-flex align-items-start gap-2">
                <i class="fa-solid fa-circle-info mt-1"></i>
                <div>
                    Solo se puede actualizar el campo <strong>Nuevo stock</strong>
                </div>
            </div>


            <div class="row g-3">
                <!-- Identificación -->
                <div class="col-md-3">
                    <label class="form-label">No. Inventario</label>
                    <input class="form-control" value="@Model.InventarioId" readonly />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Producto ID</label>
                    <input class="form-control" value="@Model.ProductoId" readonly />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Código producto</label>
                    <input class="form-control" value="@(Model.CodigoProducto ?? "-")" readonly />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" value="@(Model.NombreProducto ?? "-")" readonly />
                </div>

                <!-- Lote / Vencimiento -->
                <div class="col-md-3">
                    <label class="form-label">Lote</label>
                    <input class="form-control" value="@(string.IsNullOrWhiteSpace(Model.LoteCodigo) ? "-" : Model.LoteCodigo)" readonly />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha vencimiento</label>
                    <input class="form-control"
                           value="@(Model.FechaVencimiento.HasValue? Model.FechaVencimiento.Value.ToString("dd/MM/yyyy", CultureInfo.GetCultureInfo("es-GT")) : "-")"
                           readonly />
                </div>

                <!-- Stock -->
                <div class="col-md-3">
                    <label class="form-label">Stock actual (sistema)</label>
                    <input class="form-control" value="@Model.StockActual" readonly />
                </div>
                <div class="col-md-3">
                    <label asp-for="NuevoStock" class="form-label">Nuevo stock</label>
                    <input asp-for="NuevoStock" type="number" min="0" step="1" class="form-control" />
                    <span asp-validation-for="NuevoStock" class="text-danger"></span>
                </div>

                <!-- Motivo -->
                <div class="col-12">
                    <label asp-for="Motivo" class="form-label">Motivo del ajuste</label>
                    <textarea asp-for="Motivo" rows="3" class="form-control"
                              placeholder="Ej.: Diferencia en conteo físico, producto dañado, merma, etc."></textarea>
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>

