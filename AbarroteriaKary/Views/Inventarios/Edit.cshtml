    <div class="card ak-card ak-actions-card w-100 mt-3">
        <div class="card-body d-flex justify-content-center gap-5 flex-wrap">
            <a asp-action="Index" class="btn btn-ak btn-ak-cancel js-leave">
                <i class="fa-solid fa-xmark ak-icon"></i> Cancelar
            </a>
            <button type="reset" class="btn btn-ak btn-ak-success">
                <i class="fa-solid fa-eraser ak-icon"></i> Restablecer
            </button>
            <button type="submit" class="btn btn-ak btn-ak-primary" id="btn-guardar">
                <i class="fa-solid fa-floppy-disk ak-icon"></i> Guardar
            </button>
        </div>
    </div>








</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
          const FORM_SEL = '#frmInvEdit';
          const form = document.querySelector(FORM_SEL);
          const btn  = document.getElementById('btn-guardar');

          // Guardado seguro (anti doble-submit)
          if (window.KaryForms?.bindSafeSubmit) {
            KaryForms.bindSafeSubmit(FORM_SEL, '#btn-guardar', {
              spinnerHtml: '<i class="fa-solid fa-spinner fa-spin ak-icon"></i> Guardando...'
            });
          } else if (form) {
            form.addEventListener('submit', function () {
              if (!form.checkValidity()) return;
              if (btn) btn.disabled = true;
            });
          }

          // Confirmación al salir con cambios sin guardar
          if (window.KarySwal?.guardUnsaved && form) {
            KarySwal.guardUnsaved(FORM_SEL, '.js-leave');
          }

          // Oculta banners .alert cuando vamos a mostrar modal PRG
          function hideBootstrapAlerts() {
            document.querySelectorAll('.alert').forEach(el => el.style.display = 'none');
          }

          // ===== PRG Modals =====
          @if ((TempData["UpdatedOk"] as bool?) == true)
          {
                <text>
                  hideBootstrapAlerts();
                  if (window.KarySwal?.saveSuccess) {
                    KarySwal.saveSuccess({
                      icon: 'success',
                      title: '¡Ajuste guardado!',
                      text: 'Se actualizó el stock y se registró el KARDEX.',
                      confirmText: 'Aceptar',
                      showDenyButton: false,
                      indexUrl: '@Url.Action("Index", "Inventarios")'
                    });
                  } else {
                    alert('¡Ajuste guardado!');
                    window.location.href = '@Url.Action("Index", "Inventarios")';
                  }
                </text>
          }

          @if ((TempData["NoChanges"] as bool?) == true)
          {
                <text>
                  hideBootstrapAlerts();
                  if (window.KarySwal?.info) {
                    KarySwal.info({
                      title: 'Sin cambios',
                      text: 'El nuevo stock es igual al actual.',
                      confirmText: 'Aceptar',
                      redirectUrl: '@Url.Action("Index", "Inventarios")'
                    });
                  } else {
                    alert('Sin cambios.');
                    window.location.href = '@Url.Action("Index", "Inventarios")';
                  }
                </text>
          }
        })();
    </script>
}

