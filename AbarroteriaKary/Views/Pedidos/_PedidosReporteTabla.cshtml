@model IEnumerable<AbarroteriaKary.ModelsPartial.PedidoReporteDetalleViewModel>
@{
    var items = (Model ?? Enumerable.Empty<AbarroteriaKary.ModelsPartial.PedidoReporteDetalleViewModel>()).ToList();
}

<table class="rpt-table">
    <thead>
        <tr>
            <th style="width:13%;">Correlativo</th>
            <th style="width:18%;">Producto</th>
            <th>Descripción</th>
            <th style="width:14%;">Imagen</th>
            <th style="width:12%;">Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @if (items.Count == 0)
        {
            <tr>
                <td colspan="5" class="t-center" style="padding:10px;">
                    <em>Sin líneas en el pedido.</em>
                </td>
            </tr>
        }
        else
        {
            foreach (var x in items)
            {
                <tr>
                    <td>@(x.CorrelativoDetalle)</td>
                    <td>
                        <div><strong>@(x.NombreProducto ?? "-")</strong></div>
                        @* <div class="text-muted" style="font-size:12px;">@(x.CodigoProducto ?? "-")</div> *@
                    </td>
                    <td>@(x.DescripcionProducto ?? "-")</td>
                    <td class="t-center">
                        @if (!string.IsNullOrWhiteSpace(x.ImagenUrl))
                        {
                            <img src="@x.ImagenUrl" alt="" style="max-width:90px; max-height:60px; object-fit:contain; border:1px solid #eee; padding:2px; background:#fff;" />
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td class="t-center">@x.Cantidad</td>
                </tr>
            }
        }
    </tbody>
</table>
