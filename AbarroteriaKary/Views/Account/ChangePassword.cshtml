@model AbarroteriaKary.ModelsPartial.ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambio de contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 520px;">
    <h3 class="mb-4 text-center">Cambio de contraseña</h3>

    <form asp-action="ChangePassword" method="post" class="card p-4 shadow-sm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="Usuario" />

        @* Si en su flujo desea exigir la contraseña actual, muestre este campo *@
        <div class="mb-3">
            <label asp-for="PasswordActual" class="form-label"></label>
            <input asp-for="PasswordActual" class="form-control" />
            <span asp-validation-for="PasswordActual" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PasswordNuevo" class="form-label"></label>
            <input asp-for="PasswordNuevo" class="form-control" />
            <span asp-validation-for="PasswordNuevo" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="PasswordConfirmacion" class="form-label"></label>
            <input asp-for="PasswordConfirmacion" class="form-control" />
            <span asp-validation-for="PasswordConfirmacion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Guardar nueva contraseña</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
