@model IEnumerable<AbarroteriaKary.ModelsPartial.UsuarioListItemViewModel>
@{
    Layout = "~/Views/Shared/Reportes/_PdfLayout.cshtml";
    ViewData["Title"] = "Reporte de Usuarios";

    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
    var esGT = System.Globalization.CultureInfo.GetCultureInfo("es-GT");

    var meta = new AbarroteriaKary.ModelsPartial.ReporteMetaVM
    {
        Estado = (ViewBag.Filtro_Estado as string) ?? "ACTIVO",
        FechaHora = DateTime.Now.ToString("dd/MM/yyyy HH:mm", esGT),
        Usuario = (ViewBag.Usuario as string) ?? "Admin",
        Busqueda = ViewBag.Filtro_Q as string,
        Desde = ViewBag.Filtro_Desde as string,
        Hasta = ViewBag.Filtro_Hasta as string
    };
}

<header class="rpt-header rpt-botline">
    <div class="rpt-header__row">
        <div class="rpt-header__cell rpt-header__cell--logo">
            <img class="rpt-header__logo" src="@($"{baseUrl}/img/logologo.png")" alt="Logo" />
        </div>
        <div class="rpt-header__cell">
            <h1 class="rpt-title">ABARROTERÍA KARY</h1>
            <div class="rpt-sub">Reporte de Usuarios</div>
        </div>
    </div>
</header>
<br />

@await Html.PartialAsync("~/Views/Shared/Reportes/_ReporteMetaBoxes.cshtml", meta)
@await Html.PartialAsync("_UsuarioReporteTabla", Model)
